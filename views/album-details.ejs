<h3><%= albumDetails.title %></h3>

<img src="<%= album.artwork %>">

<h5>Artist:</h5>
<p><%= albumDetails.artists[0].name %></p>

<h5>Release Year:</h5>
<p><%= albumDetails.year %></p>

<h5> Genres: </h5>
<p><%= albumDetails.genres %></p>

<h5>Track List:</h5>
<ol>
  <% for ( let i = 0; i < albumDetails.tracklist.length; i++) { %>
  <li> <%= albumDetails.tracklist[i].title %> </li>
  <% } %>
</ol>

<% if (!albumDetails.videos) { %>
<p>No videos to show</p>
<% } else { %>
<h5>Videos</h5>
<ul>
  <% for ( let i = 0; i < albumDetails.videos.length; i++) { %>
  <div class='url'>
    <%= albumDetails.videos[i].uri %>
  </div>
  <div class="youtubeCont"></div>

  <% }%>
</ul>
<% } %>

<h5>Comments</h5>
<% for (let i = 0; i < comments.length; i++) { %>
  <p><%= comments[i].dataValues.content %></p>
  <p> - <%= comments[i].dataValues.name %></p>
<% } %>

<h5>Create a New Comment</h5>
<form action="/comments" method="POST">
  <div class="form-group">
    <label for="name">Full Name</label>
    <input type="text" class="form-control" id="name" name="name" required>
  </div>
  <div class="form-group">
    <label for="content">Comment</label>
    <textarea type="text" class="form-control" id="content" name="content" required></textarea>
  </div>
  <input type="hidden" name="masterId" value="<%= albumDetails.id %>">
  <input type="submit" class="btn btn-light">
</form>

<script src="../js/youtube.js"></script>